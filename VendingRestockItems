import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;

public class VendingRestockItems {

    JFrame frame = new JFrame();
    JLabel label = new JLabel("Select the item to restock:");
    JLabel label2 = new JLabel("Enter the amount to restock:");
    JButton done = new JButton("Done");

    JTextField textField = new JTextField(5);

    String[] items = {"Apple", "Strawberry", "Mango", "Peach", "Orange"};
    JComboBox comboBox = new JComboBox(items);


    public VendingRestockItems() {

        frame.setSize(500, 500);
        frame.setTitle("Restock Items");

        textField.setBounds(5, 5, 5, 5);

        frame.setLayout(new GridBagLayout());
        GridBagConstraints gbc = new GridBagConstraints();
        gbc.insets = new Insets(5, 5, 5, 5);

        gbc.gridx = 0;
        gbc.gridy = 0;
        gbc.anchor = GridBagConstraints.CENTER;

        frame.add(label, gbc);
        gbc.gridy = 1;
        frame.add(comboBox, gbc);
        gbc.gridy = 2;
        frame.add(label2, gbc);
        gbc.gridy = 3;
        frame.add(textField, gbc);
        gbc.gridy = 4;
        frame.add(done, gbc);
        frame.setVisible(true);

    }

    public void actionPerformed(ActionEvent e) {
        if(e.getSource() == comboBox) {
            System.out.println(comboBox.getSelectedItem());
        }
    }

    public static void main(String[] args) {
        new VendingRestockItems();
    }

}
